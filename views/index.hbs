<section class="vh-100" style="background-image: url(https://img.global.news.samsung.com/global/wp-content/uploads/2018/05/Samsung-Newsroom-Taiwan_main_1.jpg); background-size:cover;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h2 class="mb-5">Log In</h2>
            <form action="/login" method="post"  class="form-outline mb-4">
              <label class="form-label" for="typeEmailX-2" >Email</label>
              <input type="email" id="typeEmailX-2" class="form-control form-control-lg" name="email" required/>
              <label class="form-label" for="typePasswordX-2">Password</label>
              <input type="password" id="typePasswordX-2" class="form-control form-control-lg" name="password" required />
              <button class="btn btn-dark btn-lg btn-block mt-4 btn-cart" type="submit">Login</button>
            </form>
          
              {{#if loginError}}
            <p style="color: red; text-decoration: underline;">Incorrect Email or Password</p>
            {{/if}}

            <hr class="my-4">

          </div>
        </div>
      </div>
    </div>
  </div>
</section>